<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="li.zhaofeng.projectzero.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps! :D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:id="@+id/layout_my_apps"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <Button
            android:id="@+id/button_popularmovies"
            android:text="Popular Movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:onClick="openApp" />

        <Button
            android:id="@+id/button_stockhawk"
            android:text="Stock Hawk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_popularmovies"
            android:onClick="openApp" />

        <Button
            android:id="@+id/button_bigger"
            android:text="Build it Bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_stockhawk"
            android:onClick="openApp" />

        <Button
            android:id="@+id/button_material"
            android:text="Make Your App Material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_bigger"
            android:onClick="openApp" />

        <Button
            android:id="@+id/button_ubiquitous"
            android:text="Go Ubiquitous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_material"
            android:onClick="openApp" />

        <Button
            android:id="@+id/button_capstone"
            android:text="Capstone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_ubiquitous"
            android:onClick="openApp" />
    </LinearLayout>
</RelativeLayout>
