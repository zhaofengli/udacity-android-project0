<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="li.zhaofeng.projectzero.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_intro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/layout_my_apps"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_popularmovies"
                android:text="@string/app_popularmovies_name"
                style="@style/LauncherButton" />

            <Button
                android:id="@+id/button_stockhawk"
                android:text="@string/app_stockhawk_name"
                style="@style/LauncherButton" />

            <Button
                android:id="@+id/button_bigger"
                android:text="@string/app_bigger_name"
                style="@style/LauncherButton" />

            <Button
                android:id="@+id/button_material"
                android:text="@string/app_material_name"
                style="@style/LauncherButton" />

            <Button
                android:id="@+id/button_ubiquitous"
                android:text="@string/app_ubiquitous_name"
                style="@style/LauncherButton" />

            <Button
                android:id="@+id/button_capstone"
                android:text="@string/app_capstone_name"
                style="@style/LauncherButton" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
